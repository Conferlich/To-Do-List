<Window x:Class="ToDoList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="To Do:" Height="393" Width="518" Closing="Window_Closing" ResizeMode="CanMinimize" WindowStyle="ToolWindow" Icon="/ToDoList;component/todo.ico">
    <Grid>
        <ListView Name="lvToDo" Height="313" VerticalAlignment="Top" SelectionMode="Single" MouseDoubleClick="lvToDo_MouseDoubleClick">
        </ListView>
        <Grid Height="35" HorizontalAlignment="Left" Margin="0,319,0,0" Name="gridControls" VerticalAlignment="Top" Width="496">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="327*" />
                <ColumnDefinition Width="69" />
            </Grid.ColumnDefinitions>
                
            <TextBox Height="23" Name="txtItemDesc" Grid.Column="1" Grid.Row="0" />
            <Button Content="Add Item" HorizontalAlignment="left" Grid.Column="2" Name="btnAdd" Click="btnAdd_Click" />
            <Label Content="Item Description" HorizontalAlignment="Left" Name="label1" VerticalAlignment="Center"  />
        </Grid>
    </Grid>
</Window>
