<Window x:Class="ToDoListApp.EditPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit ToDo Item" Height="Auto" Width="Auto" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <TextBlock>To do Item:</TextBlock>
            <TextBox Text="{Binding Path=Description, Mode=TwoWay}"/>
        </StackPanel>
    </Grid>
</Window>
